{
    "extends": [ "eslint:recommended", "plugin:react/recommended" ],
    "env": {
        "browser": true,
        "amd": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "semi": [2, "always"]
    }
}